<div class="container">
    <h2 class="title">Sign in</h2>

    <p class="mt">Enter your e-mail and password to sign in</p>

    <div class="mt">
        <%= form_with scope: :session, url: session_path, data: {turbo: false} do |form| %>
            <p><%= form.label :email %></p>
            <p><%= form.text_field :email, class: "form_text_field" %></p>

            <p class="mt"><%= form.label :password %></p>
            <p><%= form.password_field :password, class: "form_text_field" %></p>

            <p class="mt-lg"><%= form.submit "Enter", class: "button button-main" %></p>
        <% end %>
    </div>
</div>